<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="550.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.putnik.foxreader.controller.MainController">
    <top>
        <MenuBar>
            <Menu text="Подключение">
                <MenuItem fx:id="connectionToServerMenuItem" text="Подключиться к серверу" />
            </Menu>
            <Menu fx:id="timeMenu" text="Системное время" />
        </MenuBar>
    </top>
    <center>
        <VBox spacing="10">
            <HBox spacing="10">
                <VBox spacing="10">
                    <VBox alignment="CENTER_LEFT" spacing="5">
                        <Label text="Иерархия сервера SQL" />
                        <TreeView fx:id="treeDBTreeView" minHeight="-Infinity" minWidth="-Infinity" prefHeight="338.0" prefWidth="210.0" />
                    </VBox>
                    <TextArea fx:id="logRequestTextArea" editable="false" promptText="Выполненные запросы" />
                </VBox>
                <TabPane>
                    <tabs>
                        <Tab closable="false" text="Табличный вид">
                            <TableView fx:id="tableDBTableView" maxWidth="Infinity" prefHeight="470.0" prefWidth="875.0">
                                <contextMenu>
                                    <ContextMenu>
                                        <items>
                                            <MenuItem fx:id="updateTable" text="Обновить таблицу" disable="true"/>
                                            <MenuItem fx:id="addRow" text="Добавить запись" disable="true"/>
                                            <MenuItem fx:id="deleteRow" text="Удалить запись" disable="true"/>
                                            <MenuItem fx:id="deleteAllRows" text="Удалить все записи" disable="true"/>
                                        </items>
                                    </ContextMenu>
                                </contextMenu>
                            </TableView>
                        </Tab>
                        <Tab closable="false" text="Ленточный вид">

                        </Tab>
                    </tabs>
                </TabPane>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <CheckBox fx:id="modeRealSQLCheckBox" text="Режим реального SQL" />
                <TextField fx:id="textRequestTextField" minWidth="400" promptText="Введите фильтр" />
                <Button fx:id="sendRequestButton" text="Обработать" />
                <Button fx:id="editInWindowButton" text="Ввести в окне" />
            </HBox>

            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </VBox>
    </center>
</BorderPane>
